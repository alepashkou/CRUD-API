{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "crud-api task on RsSchool",
  "type": "module",
  "scripts": {
    "start:dev": "nodemon --watch src --exec ts-node-esm src/index.ts",
    "start:prod": "tsc --build && node dist/index.js",
    "start:multi": "tsc --build && node dist/cluster.js",
    "test": "set NODE_OPTIONS=--experimental-vm-modules && npx jest"
  },
  "keywords": [],
  "author": "alepashkou",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.2",
    "@types/node": "^17.0.42",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "jest": "^28.1.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "uuid": "^8.3.2"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
